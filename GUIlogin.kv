            font_size: 25
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

        Widget:
            size_hint_y: None
            height: 60

        MDTextFieldRound:
            id: _name
            hint_text: "Name"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: _user
            hint_text: "Username"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: _pass
            hint_text: "Password"
            size_hint_x: None
