            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDRoundFlatButton:
            text: "Create New Account"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: 
                app.root.current = app.logNewUser()
                root.manager.transition.direction = "left"
        MDRoundFlatButton:
            text: "Back"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: 
                app.root.current = "LoginWindow"
                root.manager.transition.direction = "right"

        Widget:
            size_hint_y: None
            height: 15

